    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Data Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["data_gen", "--config", "config/data_gen.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Data Loader",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["data_loader", "--config", "config/data_loader.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Training - Denoising - N2N (IMG)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["train", "--config", "config/train_n2n.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Training - Denoising - N2N (STAT)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["train", "--config", "config/train_n2n_stat.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Training - Denoising - H2N",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["train", "--config", "config/train_h2n.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluation - Denoising",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["eval", "--config", "config/eval.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Training - Generative - H2H",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["train_gen", "--config", "config/train_h2h.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluation - Generative",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["eval_gen", "--config", "config/eval_gen.yml"],
            "console": "integratedTerminal"
        },
                {
            "name": "Test - Num Workers",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["test_workers", "--config", "config/test_cpu.yml"],
            "console": "integratedTerminal"
        }
    ]
}