    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Data Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["data_gen", "--config", "config/data_gen.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Data Loader",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["data_loader", "--config", "config/data_loader.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["train", "--config", "config/train_hist2noise.yml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Evaluation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "args": ["eval", "--config", "config/eval.yml"],
            "console": "integratedTerminal"
        }
    ]
}